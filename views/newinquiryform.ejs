<script>
  document.getElementById('inquiryForm').addEventListener('submit', function(event) {
    event.preventDefault(); // Prevent the form from submitting the traditional way

    // Get form values
    const customerCode = document.getElementById('input1').value;
    const customerName = document.getElementById('input2').value;

    // Get the table body element
    const tableBody = document.getElementById('inquiryTableBody');

    // Determine the new line number
    const newRowNumber = tableBody.rows.length + 1;

    // Create a new table row
    const newRow = document.createElement('tr');
    newRow.classList.add('hidden-row');

    // Create and append the cells
    newRow.innerHTML = `
      <td>${newRowNumber}</td>
      <td>${customerCode}</td>
      <td>${customerName}</td>
    `;

    // Append the new row to the table body
    tableBody.appendChild(newRow);

    // Clear the form fields
    document.getElementById('inquiryForm').reset();
  });

  document.getElementById('addRowButton').addEventListener('click', function() {
    // Find the first hidden row and make it visible
    const hiddenRow = document.querySelector('.hidden-row');
    if (hiddenRow) {
      hiddenRow.classList.remove('hidden-row');
    } else {
      alert('No more rows to show');
    }
  });
</script>
