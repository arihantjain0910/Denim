      });

      // Call the function to set the date input value
      setDateInput();
  </script>
    
 <script>
  const customerCodeInput = document.getElementById('customerCode');
  const customerNameInput = document.getElementById('customerName');
  const materialInput = document.getElementById('material');
  const materialDescriptionInput = document.getElementById('material_description');

  customerCodeInput.addEventListener('input', function() {
      const query = customerCodeInput.value;
      if (query.length >= 2) {
          fetch(`/getCustomerName?code=${query}`)
              .then(response => response.json())
              .then(data => {
                  if (data.success) {
                      customerNameInput.value = data.customerName;
                  } else {
                      customerNameInput.value = ""; // Clear the input if no matching customer found
                  }
              })
              .catch(error => {
                  console.error('Error fetching customer name:', error);
              });
      } else {
          customerNameInput.value = ""; // Clear the input if the code is less than 2 characters
      }
  });

  materialInput.addEventListener('input', function() {
      const query = materialInput.value;
      if (query.length >= 2) {
          // Fetch material description based on the material input
          fetch(`/getMaterial?material=${query}`)
              .then(response => response.json())
              .then(data => {
                  if (data.success) {
                      materialDescriptionInput.value = data.materialDescription;
                  } else {
                      materialDescriptionInput.value = ""; // Clear the input if no matching material found
                  }
              })
              .catch(error => {
                  console.error('Error fetching material description:', error);
              });
      } else {
          materialDescriptionInput.value = ""; // Clear the input if the material input is less than 2 characters
      }
  });
</script>
