  // Function to calculate the date and time 72 hours from now and set it in the date input
  function setDateInput() {
    const dateInput = document.getElementById('dateInput');

    // Get the current time
    const now = new Date();

    // Calculate the time 72 hours from now
    const futureTime = new Date(now.getTime() + 72 * 60 * 60 * 1000);

    // Extract only the date part
    const futureDate = futureTime.toISOString().split('T')[0];

    // Set the value of the date input
    dateInput.value = futureDate;
}



 // Enable the date input before form submission
